<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.metafinanz.mixmatch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mixmatch"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" 
        android:debuggable="true">
        <activity
            android:name="de.metafinanz.mixmatch.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.metafinanz.mixmatch.activities.LocationsActivity"
            android:label="@string/title_activity_locations"
            android:parentActivityName="de.metafinanz.mixmatch.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.metafinanz.mixmatch.activities.MainActivity" />
        </activity>
        <activity
            android:name="de.metafinanz.mixmatch.activities.AppointmentsActivity"
            android:label="@string/title_activity_appointments"
            android:parentActivityName="de.metafinanz.mixmatch.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.metafinanz.mixmatch.activities.MainActivity" />
        </activity>
        <activity
            android:name="de.metafinanz.mixmatch.activities.LocationDetailActivity"
            android:label="@string/title_activity_location_detail"
            android:parentActivityName="de.metafinanz.mixmatch.activities.LocationsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.metafinanz.mixmatch.activities.LocationsActivity" />
        </activity>
        <activity
            android:name="de.metafinanz.mixmatch.activities.NewAppointmentActivity"
            android:label="@string/title_activity_new_appointment"
            android:parentActivityName="de.metafinanz.mixmatch.activities.LocationDetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.metafinanz.mixmatch.activities.LocationDetailActivity" />
        </activity>
        <activity
            android:name="de.metafinanz.mixmatch.activities.ImpressActivity"
            android:label="@string/title_activity_impress" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.metafinanz.mixmatch.activities.MainActivity" />
        </activity>
        <activity
            android:name="de.metafinanz.mixmatch.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="de.metafinanz.mixmatch.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.metafinanz.mixmatch.activities.MainActivity" />
        </activity>
    </application>

</manifest>
